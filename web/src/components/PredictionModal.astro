  const predictionForm = document.getElementById('predictionForm') as HTMLFormElement;
  const resultsArea = document.getElementById('resultsArea');
  const newAnalysisBtn = document.getElementById('newAnalysisBtn');
  const toggleImageBtn = document.getElementById('toggleImageBtn');
  const symptomCheckboxes = document.querySelectorAll('input[name="symptom"]');

  // Validar formulario
  function validateForm() {
    const selectedSymptoms = Array.from(symptomCheckboxes).filter((cb: any) => cb.checked);
    const hasImage = imageInput?.files && imageInput.files.length > 0;
    // Habilitar si hay s칤ntomas o imagen
    predictBtn.disabled = selectedSymptoms.length === 0 && !hasImage;
  }

  // Escuchar cambios en checkboxes
  symptomCheckboxes.forEach(checkbox => {
    checkbox.addEventListener('change', validateForm);
  });

  // Abrir modal
  document.querySelector('.header__btn button')?.addEventListener('click', () => {
    modal?.classList.add('active');
  });

  // Cerrar modal
  closeModalBtn?.addEventListener('click', () => {
    modal?.classList.remove('active');
    resetForm();
  });

  modal?.addEventListener('click', (e) => {
    if (e.target === modal) {
      modal.classList.remove('active');
      resetForm();
    }
  });

  // Toggle imagen opcional
  toggleImageBtn?.addEventListener('click', () => {
    if (uploadArea!.style.display === 'none') {
      uploadArea!.style.display = 'block';
      toggleImageBtn.innerHTML = '<i class="ri-image-line"></i><span>Ocultar Imagen</span>';
    } else {
      uploadArea!.style.display = 'none';
      toggleImageBtn.innerHTML = '<i class="ri-image-add-line"></i><span>Agregar Imagen</span>';
      resetImageUpload();
    }
  });

  // Upload de imagen
  uploadArea?.addEventListener('click', (e) => {
    if (uploadArea.style.display !== 'none') {
      imageInput?.click();
    }
  });

  uploadArea?.addEventListener('dragover', (e) => {
    e.preventDefault();
    if (uploadArea.style.display !== 'none') {
      uploadArea.style.borderColor = 'var(--text-dark)';
    }
  });

  uploadArea?.addEventListener('dragleave', () => {
    uploadArea.style.borderColor = 'var(--primary-color)';
  });

  uploadArea?.addEventListener('drop', (e) => {
    e.preventDefault();
    uploadArea.style.borderColor = 'var(--primary-color)';
    const files = e.dataTransfer?.files;
    if (files && files.length > 0 && uploadArea.style.display !== 'none') {
      handleImageUpload(files[0]);
    }
  });

  imageInput?.addEventListener('change', (e) => {
    const files = (e.target as HTMLInputElement).files;
    if (files && files.length > 0) {
      handleImageUpload(files[0]);
    }
  });

  removeImageBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    resetImageUpload();
  });

  function handleImageUpload(file: File) {
    if (!file.type.startsWith('image/')) {
      alert('Por favor selecciona una imagen v치lida');
      return;
    }

    if (file.size > 10 * 1024 * 1024) {
      alert('La imagen es muy grande. M치ximo 10MB');
      return;
    }

    const reader = new FileReader();
    reader.onload = (e) => {
      if (previewImg && e.target?.result) {
        previewImg.src = e.target.result as string;
        uploadPlaceholder!.style.display = 'none';
        imagePreview!.style.display = 'block';
        validateForm(); // Revalidar cuando se agrega imagen
      }
    };
    reader.readAsDataURL(file);
  }

  function resetImageUpload() {
    if (imageInput) imageInput.value = '';
    if (previewImg) previewImg.src = '';
    uploadPlaceholder!.style.display = 'block';
    imagePreview!.style.display = 'none';
    validateForm(); // Revalidar cuando se quita imagen
  }

  function resetForm() {
    resetImageUpload();
    resultsArea!.style.display = 'none';
    predictionForm!.style.display = 'block';
    uploadArea!.style.display = 'none';
    toggleImageBtn!.innerHTML = '<i class="ri-image-add-line"></i><span>Agregar Imagen</span>';
    
    // Desmarcar todos los checkboxes
    symptomCheckboxes.forEach((cb: any) => {
      cb.checked = false;
    });
    
    predictBtn.disabled = true;
  }

  // Submit del formulario
  predictionForm?.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Obtener s칤ntomas seleccionados
    const selectedSymptoms = Array.from(symptomCheckboxes)
      .filter((cb: any) => cb.checked)
      .map((cb: any) => cb.value);

    // Verificar si hay imagen
    const hasImage = imageInput?.files && imageInput.files.length > 0;
    const hasSymptoms = selectedSymptoms.length > 0;

    // Debe tener al menos s칤ntomas o imagen
    if (!hasSymptoms && !hasImage) {
      alert('Por favor selecciona al menos un s칤ntoma o agrega una imagen');
      return;
    }

    // Preparar s칤ntomas para el backend (los primeros 4, rellenar con "No" si faltan)
    const symptomsForBackend: string[] = [];
    for (let i = 0; i < 4; i++) {
      if (i < selectedSymptoms.length) {
        symptomsForBackend.push(selectedSymptoms[i]);
      } else {
        symptomsForBackend.push('No');
      }
    }

    // Crear datos tabulares con valores codificados binarios
    const tabularData = {
      symptom_1: symptomsForBackend[0],
      symptom_2: symptomsForBackend[1],
      symptom_3: symptomsForBackend[2],
      symptom_4: symptomsForBackend[3],
      appetite_loss: selectedSymptoms.includes('Appetite Loss') || selectedSymptoms.includes('Loss of Appetite') ? 1 : 0,
      vomiting: selectedSymptoms.includes('Vomiting') ? 1 : 0,
      diarrhea: selectedSymptoms.includes('Diarrhea') ? 1 : 0,
      coughing: selectedSymptoms.includes('Coughing') ? 1 : 0,
      labored_breathing: selectedSymptoms.includes('Labored Breathing') ? 1 : 0,
      lameness: selectedSymptoms.includes('Lameness') ? 1 : 0,
      skin_lesions: selectedSymptoms.includes('Skin Lesions') ? 1 : 0,
      nasal_discharge: selectedSymptoms.includes('Nasal Discharge') ? 1 : 0,
      eye_discharge: selectedSymptoms.includes('Eye Discharge') ? 1 : 0,
      // Valores por defecto para otros campos (valores v치lidos del dataset)
      animal_type: 'Dog',
      breed: 'Labrador',
      age: 5,
      gender: 'Male',
      weight: 15.0,
      body_temperature: 38.5,
      heart_rate: 120,
      duration_days: 3
    };

    const btnText = predictBtn.querySelector('.btn-text');
    const btnLoader = predictBtn.querySelector('.btn-loader');

    predictBtn.disabled = true;
    if (btnText) btnText.textContent = 'Analizando...';
    (btnText as HTMLElement).style.display = 'none';
    (btnLoader as HTMLElement).style.display = 'block';

    try {
      const formData = new FormData();
      
      // Agregar imagen si existe (independiente de s칤ntomas)
      if (hasImage) {
        formData.append('image', imageInput.files[0]);
      }
      
      // Agregar datos tabulares solo si hay s칤ntomas seleccionados
      if (hasSymptoms) {
        formData.append('tabular_data', JSON.stringify(tabularData));
      }

      console.log('Enviando al backend:', {
        hasImage,
        tabularData
      });

      const response = await fetch(`${API_URL}/predict`, {
        method: 'POST',
        body: formData
      });

      if (!response.ok) {
        const errorData = await response.json().catch(() => ({ error: 'Error desconocido' }));
        console.error('Error del servidor:', errorData);
        throw new Error(errorData.error || 'Error en la predicci칩n');
      }

      const data = await response.json();
      console.log('Respuesta del backend:', data);
      displayResults(data);

    } catch (error) {
      console.error('Error completo:', error);
      alert(`Hubo un error al analizar: ${error.message || 'Por favor intenta de nuevo.'}`);
      predictBtn.disabled = false;
      (btnText as HTMLElement).style.display = 'block';
      (btnLoader as HTMLElement).style.display = 'none';
      if (btnText) btnText.textContent = 'Analizar';
    }
  });

  function displayResults(data: any) {
    predictionForm!.style.display = 'none';
    resultsArea!.style.display = 'block';

    const disease = normalizeDiseaseName(data.top_prediction);
    const confidence = (data.confidence * 100).toFixed(1);

    document.getElementById('resultDisease')!.textContent = disease;
    document.getElementById('confidenceText')!.textContent = `${confidence}% de confianza`;
    document.getElementById('resultMessage')!.innerHTML = `<p>${getDiseaseMessage(data.top_prediction)}</p>`;

    // Animar barra de confianza
    setTimeout(() => {
      const confidenceFill = document.getElementById('confidenceFill');
      if (confidenceFill) {
        confidenceFill.style.width = `${confidence}%`;
      }
    }, 100);
  }

  // Nueva consulta
  newAnalysisBtn?.addEventListener('click', () => {
    resetForm();
    const btnText = predictBtn.querySelector('.btn-text');
    const btnLoader = predictBtn.querySelector('.btn-loader');
    if (btnText) btnText.textContent = 'Analizar';
    (btnText as HTMLElement).style.display = 'block';
    (btnLoader as HTMLElement).style.display = 'none';
  });
</script>
