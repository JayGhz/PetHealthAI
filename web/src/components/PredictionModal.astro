<style>
  .modal-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    z-index: 1000;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    animation: fadeIn 0.3s ease;
  }

  .modal-overlay.active {
    display: flex;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .modal-content {
    background: var(--white);
    border-radius: 24px;
    max-width: 900px;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    position: relative;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    animation: slideUp 0.3s ease;
  }

  @keyframes slideUp {
    from { 
      opacity: 0;
      transform: translateY(30px);
    }
    to { 
      opacity: 1;
      transform: translateY(0);
    }
  }

  .modal-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--primary-color);
    border: none;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    font-size: 1.5rem;
    color: var(--text-dark);
    transition: all 0.3s;
    z-index: 10;
  }

  .modal-close:hover {
    background: var(--text-dark);
    color: var(--white);
    transform: rotate(90deg);
  }

  .modal-header {
    padding: 1.5rem 2rem 0.75rem;
    text-align: center;
  }

  .modal-header h2 {
    font-size: 1.5rem;
    color: var(--text-dark);
    margin-bottom: 0.25rem;
  }

  .modal-header p {
    color: var(--text-light);
    font-size: 0.9rem;
  }

  .modal-body {
    padding: 0 2rem 2rem;
  }

  .symptoms-section {
    margin-bottom: 1.5rem;
  }

  .symptoms-section h3 {
    font-size: 1.1rem;
    color: var(--text-dark);
    margin-bottom: 0.25rem;
  }

  .section-subtitle {
