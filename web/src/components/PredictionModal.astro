  }

  .predict-btn:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(220, 215, 248, 0.5);
  }

  .predict-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .btn-loader i {
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .results-area {
    text-align: center;
    padding: 2rem 1rem;
    background: linear-gradient(135deg, #fafafa 0%, var(--primary-color) 100%);
    border-radius: 16px;
    margin-top: 1.5rem;
    animation: fadeIn 0.5s ease;
  }

  .result-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 1.5rem;
    background: var(--white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    color: var(--primary-color);
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
  }

  .results-area h3 {
    font-size: 1.5rem;
    color: var(--text-dark);
    margin-bottom: 1rem;
  }

  .confidence-bar {
    width: 60%;
    margin: 0 auto;
    height: 18px;
    background: rgba(255, 255, 255, 0.5);
    border-radius: 20px;
    overflow: hidden;
